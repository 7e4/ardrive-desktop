{
  "compilerOptions": {
    "outDir": "./build",
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "es2018",
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": false
  },
  "include": ["./../backend/**/*", "./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
